    <section id="contact" style="background-image:url('assets/img/contact-us.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center"><h2 class="text-uppercase section-heading" style="background-color: #000000;opacity: 0.9;">Contact Us</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form id="contactForm" name="contactForm" novalidate="novalidate" method="POST" action="/addFeedback">
                        <div class="form-row">
                            <div class="col col-md-6">
                                <div class="form-group"><input name="feedback[name]" class="form-control" type="text" id="name" placeholder="Your Name *" required="" style="background-color: rgb(0,0,0);opacity: 0.85;"><small class="form-text text-danger flex-grow-1 help-block lead"></small></div>
                                <div
                                    class="form-group"><input name="feedback[email]" class="form-control" type="email" id="email" placeholder="Your Email *" required="" style="background-color: rgb(0,0,0);opacity: 0.85;"><small class="form-text text-danger help-block lead"></small></div>
                            <div class="form-group"><input name="feedback[phone]" class="form-control" type="tel" placeholder="Your Phone *" required="" style="background-color: rgb(0,0,0);opacity: 0.85;"><small class="form-text text-danger help-block lead"></small></div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group"><textarea name="feedback[message]" class="form-control" id="message" placeholder="Your Message *" required="" style="background-color: rgb(0,0,0);opacity: 0.85;"></textarea><small class="form-text text-danger help-block lead"></small></div>
                        </div>
                        <div class="col">
                            <div class="clearfix"></div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div><button class="btn btn-primary btn-xl text-uppercase" id="sendMessageButton" type="submit" style="background-color: rgba(28,41,156,0.89);">Send Message</button></div>
                </div>
                </form>
            </div>
        </div>
        </div>
